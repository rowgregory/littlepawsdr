doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="format-detection" content="telephone=no")
    title Reset Your Password - Little Paws Dachshund Rescue
    style.
      /* Base styles */
      * {
        box-sizing: border-box;
      }
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        margin: 0;
        padding: 10px;
        background-color: #f5f5f5;
        -webkit-text-size-adjust: 100%;
        -ms-text-size-adjust: 100%;
      }

      /* Container responsive */
      .container {
        max-width: 600px;
        width: 100%;
        margin: 0 auto;
        background-color: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }

      /* Header responsive */
      .header {
        background: linear-gradient(135deg, #ff9a56 0%, #e67e22 100%);
        padding: 30px 20px;
        text-align: center;
        color: white;
      }
      .big-paw {
        font-size: 32px;
        color: #e67e22;
        display: block;
        margin-bottom: 10px;
      }
      .header h1 {
        margin: 0 0 8px;
        font-size: 24px;
        font-weight: 700;
        line-height: 1.2;
      }
      .header p {
        margin: 0;
        font-size: 14px;
        opacity: 0.9;
      }
      .hearts {
        text-align: center;
        margin-top: 12px;
        font-size: 16px;
        letter-spacing: 1px;
      }

      /* Content responsive */
      .content {
        padding: 30px 20px;
      }
      .content h2 {
        color: #2c3e50;
        font-size: 28px;
        text-align: center;
        margin-bottom: 15px;
        font-weight: 700;
        line-height: 1.2;
      }
      .subtitle {
        text-align: center;
        color: #7f8c8d;
        font-size: 16px;
        margin-bottom: 30px;
        line-height: 1.4;
      }

      /* Message box responsive */
      .message-box {
        background-color: #fef9e7;
        border-left: 4px solid #f39c12;
        padding: 20px;
        margin: 25px 0;
        border-radius: 0 8px 8px 0;
      }
      .message-box p {
        margin: 0 0 12px;
        color: #2c3e50;
        line-height: 1.6;
        font-size: 15px;
      }
      .message-box p:last-child {
        margin-bottom: 0;
      }

      /* Button responsive */
      .reset-button {
        display: table;
        width: 100%;
        max-width: 280px;
        margin: 25px auto;
        padding: 0;
        background: linear-gradient(135deg, #ff9a56 0%, #e67e22 100%);
        color: white !important;
        text-decoration: none;
        text-align: center;
        border-radius: 50px;
        font-weight: 600;
        font-size: 16px;
        transition: transform 0.2s;
        border: none;
        cursor: pointer;
        min-height: 48px;
      }
      .reset-button-cell {
        display: table-cell;
        vertical-align: middle;
        text-align: center;
        padding: 16px 20px;
      }
      .reset-button:hover {
        transform: translateY(-1px);
      }

      /* Security note responsive */
      .security-note {
        background-color: #ecf0f1;
        padding: 18px;
        border-radius: 8px;
        margin: 25px 0;
      }
      .security-note h3 {
        margin: 0 0 8px;
        color: #2c3e50;
        font-size: 15px;
        font-weight: 600;
      }
      .security-note p {
        margin: 0;
        color: #7f8c8d;
        font-size: 14px;
        line-height: 1.5;
      }

      /* Footer responsive */
      .footer {
        text-align: center;
        padding: 30px 20px;
        background-color: #f8f9fa;
        color: #7f8c8d;
        font-size: 14px;
      }
      .footer p {
        margin: 0 0 15px;
        text-align: center;
        line-height: 1.5;
        max-width: 100%;
      }
      .footer-links {
        margin: 20px auto 0;
        width: 100%;
      }
      .footer-links table {
        margin: 0 auto;
        border-collapse: collapse;
      }
      .footer-links td {
        padding: 0 6px;
        text-align: center;
      }
      .footer-links .mobile-links {
        display: none;
      }
      .footer-link {
        color: white !important;
        text-decoration: none;
        padding: 10px 18px;
        background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%);
        border-radius: 25px;
        font-size: 13px;
        font-weight: 500;
        transition: all 0.2s ease;
        text-align: center;
        min-width: 120px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        white-space: nowrap;
        border: 2px solid transparent;
      }
      .footer-link:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        background: linear-gradient(135deg, #7f8c8d 0%, #95a5a6 100%);
      }

      /* Mobile specific styles */
      @media only screen and (max-width: 600px) {
        body {
          padding: 5px;
        }

        .container {
          border-radius: 8px;
        }

        .header {
          padding: 25px 15px;
        }

        .header h1 {
          font-size: 22px;
        }

        .content {
          padding: 25px 15px;
        }

        .content h2 {
          font-size: 24px;
        }

        .subtitle {
          font-size: 15px;
        }

        .message-box {
          padding: 16px;
          margin: 20px 0;
        }

        .message-box p {
          font-size: 14px;
        }

        .reset-button {
          margin: 20px auto;
          padding: 14px 18px;
          font-size: 15px;
        }

        .security-note {
          padding: 15px;
          margin: 20px 0;
        }

        .footer {
          padding: 25px 15px;
        }

        .footer-links {
          margin: 18px auto 0;
          text-align: center;
        }

        .footer-links table {
          display: none;
        }

        .footer-links .mobile-links {
          display: block;
        }

        .footer-links .mobile-links .footer-link {
          display: block;
          margin: 10px auto;
          width: 200px;
          max-width: 90%;
        }

        .footer-link {
          padding: 12px 20px;
          font-size: 13px;
          min-width: 200px;
          width: 100%;
          max-width: 250px;
        }
      }

      /* Very small screens */
      @media only screen and (max-width: 400px) {
        .header h1 {
          font-size: 20px;
        }

        .content h2 {
          font-size: 22px;
        }

        .big-paw {
          font-size: 28px;
        }

        .hearts {
          font-size: 14px;
        }

        .footer-link {
          min-width: 180px;
          max-width: 220px;
          font-size: 12px;
          padding: 11px 18px;
        }
      }

      /* Dark mode support */
      @media (prefers-color-scheme: dark) {
        .container {
          background-color: #2c2c2c;
        }

        .content h2 {
          color: #ffffff;
        }

        .message-box p {
          color: #ffffff;
        }

        .security-note {
          background-color: #3c3c3c;
        }

        .security-note h3 {
          color: #ffffff;
        }

        .security-note p {
          color: #cccccc;
        }

        .footer {
          background-color: #3c3c3c;
        }
      }

