{
  "name": "lpdr",
  "version": "3.0.1",
  "description": "Dachshund Rescue",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend",
    "build": "NPM_CONFIG_PRODUCTION=true npm install --prefix frontend && npm run build --prefix frontend",
    "data:import": "node backend/seeder",
    "lowercase-emails": "node backend/lowercase-all-emails.js"
  },
  "author": "Gregory Row",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^8.2.0",
    "email-templates": "^12.0.3",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "googleapis": "^149.0.0",
    "jsonwebtoken": ">=9.0.0",
    "mongoose": ">=5.13.20",
    "morgan": "^1.10.0",
    "node-cron": "^4.0.7",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.11",
    "preview-email": "^3.1.0",
    "pug": "^3.0.2",
    "semver": "^7.7.3",
    "socket.io": "^4.7.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-private-property-in-object": "^7.27.1",
    "@types/dotenv": "^6.1.1",
    "@types/email-templates": "^10.0.4",
    "@types/express": "^5.0.6",
    "@types/nodemailer": "^6.4.17",
    "@types/pug": "^2.0.10",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9"
  },
  "overrides": {
    "email-templates": {
      "nodemailer": "^7.0.11"
    },
    "preview-email": {
      "nodemailer": "^7.0.11"
    }
  }
}
